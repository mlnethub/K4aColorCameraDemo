<Window x:Class="K4aColorCameraDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:K4aColorCameraDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded"
        Unloaded="Window_Unloaded">
    <StackPanel>
        <TextBlock x:Name="txtResult" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock x:Name="_resultTxt" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Width="300" Height="30">
            <Button x:Name="btn_start" IsEnabled="True" HorizontalAlignment="Left" Click="Btn_start_Click" Margin="3">Start Camera</Button>
            <Button x:Name="btn_stop" IsEnabled="False" HorizontalAlignment="Left" Click="Btn_stop_Click" Margin="3">Stop Camera</Button>
        </StackPanel>
        <Image Name="displayImg" HorizontalAlignment="Left"  VerticalAlignment="Top" />
    </StackPanel>
</Window>
